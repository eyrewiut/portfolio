---
export interface Props {
	title?: string;
	description?: string;
}

import "@fontsource/jost/variable.css";
import "@fontsource/jost/variable-italic.css";
import "@fontsource/lato";
import "@fontsource/zen-kaku-gothic-new";
// import "~/icons.css";

const {
	title = "George Newton",
	description = "I am George Newton, a full-stack developer and University of York student and this is my personal website and portfolio."
} = Astro.props as Props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialCardURL = new URL("/social-card.png", Astro.url)
---

<!DOCTYPE html>
<html lang="en-GB" class="text-18px">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />

		<link rel="icon" type="image/svg+xml" href="/favicon.svg">
		<link rel="icon" type="image/png" href="/fish-dark.png">

		<link rel="icon" type="image/png" sizes="32x32" media="(prefers-color-scheme: light)" href="/favicon-lightx32.png">
		<link rel="icon" type="image/png" sizes="16x16" media="(prefers-color-scheme: light)" href="/favicon-lightx16.png">

		<link rel="icon" type="image/png" sizes="32x32" media="(prefers-color-scheme: dark)" href="/favicon-darkx32.png">
		<link rel="icon" type="image/png" sizes="16x16" media="(prefers-color-scheme: dark)" href="/favicon-darkx16.png">


		<link rel="canonical" href={canonicalURL} />

		<link rel="preload" href="/background-tile-light.png" media="(prefers-color-scheme: light)" as="image">
		<link rel="preload" href="/background-tile-dark.png" media="(prefers-color-scheme: dark)" as="image">
		<link rel="preload" href="/fish-light.svg" media="(prefers-color-scheme: dark)" as="image">
		<link rel="preload" href="/fish-dark.svg" media="(prefers-color-scheme: light)" as="image">

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website">
		<meta property="og:url" content="https://eyrewiut-portfolio.netlify.app/">
		<meta property="og:title" content="Home | George Newton">
		<meta property="og:description" content="I am George Newton, a full-stack developer and University of York student and this is my personal website and portfolio.">
		<meta property="og:image" content={socialCardURL}>

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image">
		<meta property="twitter:url" content={Astro.site.href}>
		<meta property="twitter:title" content="Home | George Newton">
		<meta property="twitter:description" content="I am George Newton, a full-stack developer and University of York student and this is my personal website and portfolio.">
		<meta property="twitter:image" content={socialCardURL}>

		<meta name="generator" content={Astro.generator} />
		<title>{title} | George Newton</title>
		<meta name="description" content={description}>
		<slot name="head"/>
	</head>
	<body class="font-zen dark:text-white">
		<slot />
		<slot name="foot"/>
	</body>
</html>

<style>
html {
	background: url(/background-tile-light.png) #F5F2ED;
}

@media (prefers-color-scheme: dark) {
	html {
		background: url(/background-tile-dark.png) #272B29;
	}
}
</style>
